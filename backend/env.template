# Server
PORT=3000
NODE_ENV=development

# Database
# Local: postgresql://usuario:senha@localhost:5432/promo_gestao?schema=public
# Render: Obtido automaticamente via DATABASE_URL (não precisa configurar)
DATABASE_URL="postgresql://usuario:senha@localhost:5432/promo_gestao?schema=public"

# JWT
# Local: Gerar strings aleatórias
# Render: Gerado automaticamente (ou configure manualmente)
JWT_SECRET=seu-secret-key-aqui-mude-para-algo-secreto
JWT_REFRESH_SECRET=seu-refresh-secret-key-aqui-mude-para-algo-secreto
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Storage (substitui AWS S3)
# Obtenha as credenciais em: Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=seu-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com

# CORS
# Local: http://localhost:5173,http://localhost:19006
# Render: https://seu-app.vercel.app,https://seu-backend.onrender.com
CORS_ORIGIN=http://localhost:5173,http://localhost:19006
